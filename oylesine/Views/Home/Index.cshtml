
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int kullaniciID = Convert.ToInt32(ViewBag.kullaniciId);
}


<div class="container">
    
    <div class="row">
        <div class="form-group col-md-8">
            <br /><br /><textarea class="form-control" rows="4" placeholder="Hadi, bir şeyler yolla..."></textarea><br />
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <button type="submit" class="btn  btn-primary btn-info pull-right">Yolla!</button><br /><br /><br /><br />

            </div>
        </div>
        <div id="pp">

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var params = @Session["kullaniciID"];
        $.ajax({
            url: '/api/Values/GonderileriGetir',
            data: params,
            type: 'POST',
            dataType: 'json',
            success: function (data) {
                console.log(data.icerik);
                for(var i=0; i<data.count; i++){
                    $("#pp").append("<p>" + data.icerik + "</p>");
                }
                
                
            }
        });
    });
</script>
